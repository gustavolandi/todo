<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbTodoStatus"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/txvTodoName"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/cbTodoStatus"
        android:layout_toStartOf="@+id/imgDeleteItem"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/txvTodoItemDate"
        android:layout_below="@+id/txvTodoName"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#0000FF"
        android:layout_toEndOf="@+id/cbTodoStatus"
        android:layout_toStartOf="@+id/imgDeleteItem"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"

        />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/imgDeleteItem"
        android:layout_marginEnd="10dp"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
